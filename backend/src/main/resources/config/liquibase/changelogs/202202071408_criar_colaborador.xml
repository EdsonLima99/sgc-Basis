<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet id="2" author="edson.lima">
        <createTable tableName="colaborador">
            <column name="id" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="nome" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="sobrenome" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="cpf" type="char(11)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="foto" type="blob">
                <constraints nullable="true"/>
            </column>
            <column name="dt_nascimento" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="dt_admissao" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="id_senioridade" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="colaborador" columnNames="id" constraintName="pk_colaborador"/>

        <addForeignKeyConstraint
                baseTableName="colaborador"
                baseColumnNames="id_senioridade"
                referencedTableName="senioridade"
                referencedColumnNames="id"
                constraintName="fk_colaborador_senioridade"
        />

        <createSequence sequenceName="seq_colaborador" incrementBy="1" startValue="1"/>

    </changeSet>
</databaseChangeLog>